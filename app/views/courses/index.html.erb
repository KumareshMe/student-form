<h1 class="text-center mt-4">Course List</h1>

<% if current_user.admin? %>
  <div class="container" id="index-container">
    </br>
    <% @courses.each do |course| %>
      <div class="card mt-4" style="width: 22rem;">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Course Name: <%= course.name %> </li>
        </ul>
      </div>

      <div class="mt-2">
        <%= link_to "EDIT COURSE NAME", edit_course_path(course), class: "btn btn-secondary" %></br></br>
      </div>
    <% end %>

<% else %></br>
  <h2><center>Oops! Only Admin has the right to view Course list</center></h2>
<% end %>
  
</div>