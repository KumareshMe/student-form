<h2 class="text-center mt-4">Login your Profile</h2></br>
<div class="container" id="new-container">

</br>
	<%= form_with(scope: :session, url: login_path, local: true) do |j| %>
		  
		<div class="form-group row">
			<%= j.label :email, class: "col-2 col-form-label" %>
				<div class="col-5">
					<%= j.email_field :email, class: "form-control" %>
				</div>
		</div>

		<div class="form-group row">
			<%= j.label :password, class: "col-2 col-form-label" %>
				<div class="col-5">
					<%= j.text_field :password, class: "form-control" %>
			</div>
		</div>
		
		<div class="form-group row, text-center">
			<%= j.submit "LOGIN", class: "btn btn-secondary" %>
		</div></br>

  <% end %>
</div>