<div class="container">
  </br>
  <% if @student.errors.any? %>
  	<h3>Oops! The Following errors prevented from being saved</h3>
  	<ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  </br>
  <%= form_with(model: @student, local: true) do |j| %>
    <div class="form-group row">
      <%= j.label :student_name, "Student Name", class: "col-2 col-form-label" %>
      <div class="col-5">
      	<%= j.text_field :student_name, class: "form-control" %>
    	</div>
	</div>
	  
  <div class="form-group row"> 
	  <%= j.label :email_id,"Email Id", class: "col-2 col-form-label" %>
	  <div class="col-5">
	  	<%= j.text_field :email_id, class: "form-control" %>
	  </div>
	</div>

	<div class="form-group row">
	  <%= j.label :address, "Contact Address", class: "col-2 col-form-label" %>
	  <div class="col-5">
	    <%= j.text_field :address, row: 5, class: "form-control" %>
	  </div>
	</div>

	<div class="form-group row">
	  <%= j.label :contact_number, "Contact Number", class: "col-2 col-form-label" %>
	  <div class="col-5">
	    <%= j.text_field :contact_number, class: "form-control" %>
	  </div>
	</div>

	<div class="form-group row">
	  <%= j.label :marks, "Marks Scored", class: "col-2 col-form-label" %>
	  <div class="col-5">
	    <%= j.text_field :marks, class: "form-control" %>
	  </div>
	</div>

	<div class="form-group row">
	  <%= j.label :college, "Choose College", class: "col-2 col-form-label" %>
	  <div class="col-5">
	    <%= j.collection_select(:college_ids, College.all, :id, :name,
		                       {prompt: "Available Colleges"}, { multiple: true, class: "custom-select"} ) %>
	  </div>
	</div>

	<div class="form-group row">
    <%= j.label :course, "Choose Course", class: "col-2 col-form-label" %>
    <div class="col-5">
      <%= j.collection_select(:course_ids, Course.all, :id, :name,
                             {prompt: "Available Courses"}, { multiple: true, class: "custom-select"} ) %>
    </div>
  </div></br>
	  
	<div class="form-group row, text-center">
	  <%= j.submit "Submit your Application Form", class: "btn btn-secondary" %>
	</div></br>
  <% end %>
</div>