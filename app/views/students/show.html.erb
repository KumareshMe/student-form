<div class="container" id="show-container">
<h2 class="text-center mt-4"><%= @student.student_name %></h2>

  <div class="card mt-4" style="width: 22rem;">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Student Name: <%= @student.student_name %> </li>
      <li class="list-group-item">Email Id: <%= @student.email_id %> </li>
      <li class="list-group-item">Address: <%= @student.address %> </li>
      <li class="list-group-item">Contact Number: <%= @student.contact_number %> </li>
      <li class="list-group-item">Marks: <%= @student.marks %> </li>
      <li class="list-group-item"><%= link_to "EDIT", edit_student_path(@student)%></li>                             
    </ul>
  </div>
</div>