<div class="container">

<% if @user.errors.any? %>
	<h2>The following errors prevented from being saved</h2>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>
</br>
<%= form_with(model: @user, local: true) do |j| %>
	<div class="form-group row">
	  <%= j.label :username, class: "col-2 col-form-label" %>
	  <div class="col-5">
	    <%= j.text_field :username, class: "form-control" %>
	  </div>
	</div>
	  
  <div class="form-group row">
	  <%= j.label :email, class: "col-2 col-form-label" %>
	  <div class="col-5">
	    <%= j.email_field :email, class: "form-control" %>
	  </div>
	</div>

	<div class="form-group row">
	  <%= j.label :password, class: "col-2 col-form-label" %>
	  <div class="col-5">
	    <%= j.text_field :password, row: 5, class: "form-control" %>
	  </div>
	</div>
	  
	<div class="form-group row">
	  <%= j.submit(@user.new_record? ? "SIGN UP" : "Update account", class: "btn btn-outline-info") %>
	</div></br>
  
<% end %>
</div>